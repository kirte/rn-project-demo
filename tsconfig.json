{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": [
      "es2019"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": [
      "reflect-metadata",
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "mock-server/**/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js"
  ]
}